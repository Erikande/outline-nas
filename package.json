{
  "name": "outline-nas",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint . --ext .js,.cjs,.mjs,.ts,.tsx --max-warnings=0 || true",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "commit": "cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "commitizen": "^4.3.0",
    "cz-git": "^1.9.0",
    "eslint": "^9.9.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    },
    "cz-git": {
      "scopes": [
        "ops",
        "docs",
        "ci",
        "jules",
        "dev",
        "prod",
        "scripts",
        "compose",
        "infra",
        "deps"
      ],
      "types": [
        {
          "value": "feat",
          "name": "feat:     a new feature"
        },
        {
          "value": "fix",
          "name": "fix:      a bug fix"
        },
        {
          "value": "docs",
          "name": "docs:     documentation only"
        },
        {
          "value": "style",
          "name": "style:    code style (no logic)"
        },
        {
          "value": "refactor",
          "name": "refactor: code refactor (no fix/feat)"
        },
        {
          "value": "perf",
          "name": "perf:     performance improvement"
        },
        {
          "value": "test",
          "name": "test:     add/update tests"
        },
        {
          "value": "build",
          "name": "build:    build system or deps"
        },
        {
          "value": "ci",
          "name": "ci:       CI config or scripts"
        },
        {
          "value": "chore",
          "name": "chore:    maintenance tasks"
        },
        {
          "value": "revert",
          "name": "revert:   revert a previous commit"
        }
      ]
    }
  }
}
